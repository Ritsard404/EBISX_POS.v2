<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="EBISX_POS.AddUserWindow"
        xmlns:vm="using:EBISX_POS.ViewModels.Manager"
        x:DataType="vm:AddUserViewModel"
        Title="Add New User"
        WindowStartupLocation="CenterOwner"
        Width="400" Height="450"
        SystemDecorations="None"
        CornerRadius="10">
    <Border BorderThickness="15" CornerRadius="10" BorderBrush="Orange">
        <Grid RowDefinitions="Auto,*,Auto" Margin="20">
            <TextBlock Grid.Row="0" 
                      Text="Add New User" 
                      FontSize="20" 
                      FontWeight="Bold"
                      Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1" Spacing="15">
                <TextBox Watermark="Email"
                         Text="{Binding Email, Mode=TwoWay}"/>
                <TextBox Watermark="First Name"
                         Text="{Binding FirstName, Mode=TwoWay}"/>
                <TextBox Watermark="Last Name"
                         Text="{Binding LastName, Mode=TwoWay}"/>
                <ComboBox PlaceholderText="Role" SelectedValue="{Binding Role, Mode=TwoWay}"
                         >
                    <ComboBoxItem Content="Manager"/>
                    <ComboBoxItem Content="Cashier"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Spacing="10"
                        Margin="0,20,0,0">
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        Padding="20,5"/>
                <Button Content="Add User" 
                        Command="{Binding AddUserCommand}"
                        Padding="20,5"/>
            </StackPanel>

            <!-- Error Message -->
            <Border Grid.Row="1"
                    Background="#FFE0E0" 
                    BorderBrush="Red" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Padding="10"
                    VerticalAlignment="Top"
                    IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}">
                <TextBlock Text="{Binding ErrorMessage}"
                         Foreground="Red"
                         TextWrapping="Wrap"/>
            </Border>
        </Grid>
    </Border>
</Window> 